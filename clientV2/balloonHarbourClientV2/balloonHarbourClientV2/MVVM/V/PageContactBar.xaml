<Page x:Class="balloonHarbourClientV2.MVVM.V.PageContactBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:balloonHarbourClientV2.MVVM.V"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="150"
      Title="FrameContactBar">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Label x:Name="LabelContacts"
                   Content="Contacts"
                   VerticalAlignment="Center"
                   FontWeight="Medium"
                   Foreground="Gray"
                   Margin="8,0,0,0"/>
        </Grid>

        <ListView x:Name="ListViewContacts"
                  ItemsSource="{Binding Contacts}"
                  Grid.Row="1"
                  BorderThickness="0"
                  ItemContainerStyle="{StaticResource Contactcard}"/>
    </Grid>
</Page>
